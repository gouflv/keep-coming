// generate: pnpm exec prisma migrate dev --name init

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  password  String?
  create_at DateTime @default(now())
}

model Node {
  id        Int      @id @default(autoincrement())
  name      String
  parentId  Int
  sort      Int      @default(1)
  create_at DateTime @default(now())
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  create_at DateTime @default(now())

  // relations
  nodeId   Int
  authorId Int
}

model Reply {
  id        Int      @id @default(autoincrement())
  floorNum  Int
  content   String
  create_at DateTime @default(now())

  // relations
  authorId Int
  postId   Int
}
